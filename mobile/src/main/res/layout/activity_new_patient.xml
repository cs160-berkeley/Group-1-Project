<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/lightBlueBG"
    tools:context="twerktitans.medagenda.NewPatientActivity">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editNewPatientFirstName"
        android:hint="First Name"
        android:textSize="20dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp"
        android:singleLine="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editNewPatientLastName"
        android:hint="Last Name"
        android:textSize="20dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp"
        android:singleLine="true"
        android:layout_below="@+id/editNewPatientFirstName"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set DOB"
        android:id="@+id/btnNewPatientSetDoB"
        android:layout_below="@+id/textNewPatientDoB"
        android:layout_alignParentEnd="true"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:paddingLeft="45dp"
        android:paddingRight="45dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textNewPatientDoB"
        android:layout_below="@+id/editNewPatientLastName"
        android:layout_alignEnd="@+id/editNewPatientLastName"
        android:padding="8dp"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Date of Birth"
        android:id="@+id/textView5"
        android:padding="8dp"
        android:layout_below="@+id/editNewPatientLastName"
        android:layout_alignParentStart="true"
        android:textSize="20dp"/>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:id="@+id/imageView10"
        android:src="@color/dividerColor"
        android:layout_below="@+id/btnNewPatientSetDoB"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editNewPatientRoom"
        android:hint="Room Number"
        android:textSize="20dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp"
        android:singleLine="true"
        android:layout_below="@+id/imageView10"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/btnNewPatientAdd"
        android:layout_marginTop="39dp"
        android:textColor="@color/white"
        android:background="@color/actionBarColor"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_below="@+id/editNewPatientRoom"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:textSize="18dp"/>

</RelativeLayout>
