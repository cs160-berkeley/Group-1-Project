<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="twerktitans.medagenda.NewTaskActivity">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editNewTaskDetails"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:hint="Task"
        android:layout_alignEnd="@+id/btnNewTaskAdd"
        android:textSize="28dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Category"
        android:id="@+id/textView6"
        android:padding="12dp"
        android:textStyle="bold"
        android:layout_below="@+id/editNewTaskDetails"
        android:layout_alignParentStart="true"
        android:textSize="22dp"/>

    <Spinner
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/newTaskColorSpinner"
        android:layout_gravity="right"
        android:layout_below="@+id/editNewTaskDetails"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/textView6"
        />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:id="@+id/imageView6"
        android:src="@color/dividerColor"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btnNewTaskAdd"
        android:background="@color/actionBarColor"
        android:src="@drawable/plus_icon"
        android:scaleType="fitCenter"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Time"
        android:id="@+id/btnNewTaskTime"
        android:layout_below="@+id/imageView6"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Starts"
        android:id="@+id/textView7"
        android:padding="12dp"
        android:textStyle="bold"
        android:textSize="22dp"
        android:layout_below="@+id/imageView6"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:id="@+id/imageView7"
        android:src="@color/dividerColor"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Repeats"
        android:id="@+id/textView8"
        android:padding="12dp"
        android:textStyle="bold"
        android:textSize="22dp"
        android:layout_below="@+id/imageView7"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:id="@+id/imageView8"
        android:src="@color/dividerColor"
        android:layout_below="@+id/textView8"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Every"
        android:id="@+id/textView9"
        android:layout_alignBottom="@+id/editNewTaskMinutes"
        android:layout_toStartOf="@+id/editNewTaskMinutes"
        android:layout_marginBottom="8dp"
        android:textSize="22dp"/>

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editNewTaskMinutes"
        android:layout_below="@+id/imageView7"
        android:layout_toStartOf="@+id/textView10"
        android:paddingTop="14dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="min"
        android:id="@+id/textView10"
        android:layout_alignBottom="@+id/editNewTaskMinutes"
        android:layout_marginBottom="8dp"
        android:layout_alignParentEnd="true"
        android:textSize="22dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textNewTaskTime"
        android:layout_below="@+id/imageView6"
        android:layout_toStartOf="@+id/btnNewTaskTime"
        android:layout_marginTop="12dp"
        android:textSize="22dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textNewTaskPatient"
        android:layout_below="@+id/imageView9"
        android:layout_alignParentStart="true"
        android:textSize="26dp"
        android:padding="8dp"/>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:id="@+id/imageView9"
        android:src="@color/dividerColor"
        android:layout_marginTop="340dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textNewTaskDoB"
        android:layout_below="@+id/textNewTaskPatient"
        android:layout_alignParentStart="true"
        android:paddingLeft="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textNewTaskRoom"
        android:layout_alignTop="@+id/textNewTaskPatient"
        android:layout_alignParentEnd="true"
        android:padding="12dp"/>

